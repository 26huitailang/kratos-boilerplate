# 生产环境变量配置示例
# 复制此文件为 .env.prod 并配置实际值
# 注意：不要将包含敏感信息的 .env 文件提交到版本控制系统

# 环境标识
ENVIRONMENT=production

# 数据库配置
DATABASE_URL=postgresql://username:password@hostname:5432/database_name?sslmode=require

# Redis配置
REDIS_ADDR=redis-cluster.example.com:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# JWT配置
JWT_SECRET_KEY=your-production-jwt-secret-key-must-be-strong-and-random

# 服务器配置
HTTP_ADDR=0.0.0.0:8000
GRPC_ADDR=0.0.0.0:9000
HTTP_TIMEOUT=30s
GRPC_TIMEOUT=30s

# 认证配置
ACCESS_TOKEN_EXPIRATION=1h
REFRESH_TOKEN_EXPIRATION=7d
TOTP_ENABLED=true

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# 安全配置
TLS_ENABLED=true
TLS_CERT_FILE=/path/to/cert.pem
TLS_KEY_FILE=/path/to/key.pem

# CORS配置
CORS_ALLOWED_ORIGINS=https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_MAX_AGE=86400

# 速率限制
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=100
RATE_LIMIT_BURST=10

# 监控配置
METRICS_ENABLED=true
METRICS_ADDR=0.0.0.0:8080
METRICS_PATH=/metrics

HEALTH_ENABLED=true
HEALTH_ADDR=0.0.0.0:8081
HEALTH_PATH=/health

# 分布式追踪
TRACING_ENABLED=true
TRACING_ENDPOINT=http://jaeger:14268/api/traces
TRACING_SERVICE_NAME=kratos-boilerplate

# 插件配置
PLUGINS_ENABLED=true
PLUGINS_DIRECTORY=./plugins
PLUGINS_CONFIG_DIRECTORY=./configs/plugins
PLUGINS_AUTO_LOAD=false
PLUGINS_SANDBOX_ENABLED=true
PLUGINS_MAX_MEMORY=50MB
PLUGINS_MAX_CPU_PERCENT=5